{
  "manifest_version": 3,
  "name": "Drink Your Water",
  "author": "Nicolas Magno",
  "version": "1.0.0",
  "description": "Um simples lembrete para te manter hidratado durante o dia.",
  "icons": {
    "16": "./icons/water48.png",
    "48": "./icons/water48.png",
    "128": "./icons/water128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "notifications", "storage"]
}
