{
  "manifest_version": 3,
  "name": "Drink Your Water",
  "author": "Nicolas Magno",
  "version": "1.0.0",
  "description": "A simple reminder to keep yourself hydrated.",
  "icons": {
    "16": "./icons/water16.png",
    "48": "./icons/water48.png",
    "128": "./icons/water128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "tabs", "notifications"]
}
